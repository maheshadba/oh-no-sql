@model DataAccess.Entities.JobPostingInfo

@{
    ViewBag.Title = "JobDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>JobDetails</h2>

<div class="base-content job-details-layout">

    <div class="container-details">
        <h1>  @Html.DisplayFor(model => model.JobTitle)</h1>
        <hr />
        <div class="details-left">
            <h3>Job Description</h3>
            <div class="job-description">
                @Html.DisplayFor(model => model.JobDescription)
            </div>
            <span>Job Id:  @Html.DisplayFor(model => model.JobPostingId)</span><span class="left-space-20"> Posted on:  @Html.DisplayFor(model => model.JobCreationDate) </span>
            @using (Html.BeginForm())
            {
            <div class="apply-button"><input type="submit" value="APPLY" formaction=@Url.Action("Apply", new {Apply = Model.JobPostingId }) formmethod="post" /></div>
            }
        </div>

        <div class="details-right">

            <img src="~/Content/Office-01-WF.png" />
            <h3>@Html.DisplayFor(model => model.CompanyName)</h3>
            <!-- TODO Uncomment the code once you have the model returning the data -->
