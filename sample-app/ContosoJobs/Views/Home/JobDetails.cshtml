                    @for (int i = 1; i <= Model.AverageRating; i++)
                    {
                        <div class="fa fa-star checked"></div>
                    }
                    @for (int i = 1; i <= (5 - Model.AverageRating); i++)
                    {
                        <div class="fa fa-star"></div>
                    }
                </a>*@
