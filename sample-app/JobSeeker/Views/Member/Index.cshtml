@model IPagedList<IdentityManagement.Entities.JobPostingInfo>

@{
    ViewBag.Title = "Member Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using PagedList.Mvc;
@using PagedList;

<h2 style="margin-top: 30px; margin-bottom: 50px;">JobSeeker Profile</h2>
<h3 style="margin-top: 30px; margin-bottom: 50px;">
    @User.Identity.Name
</h3>

<h4>Your job applications</h4>
<table class="table" style="margin-bottom: 50px;">
    <tr>
        <th>Company Name</th>
        <th>Job Title</th>
        <th>City</th>
        <th>State</th>
        <th>Date Created</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.CompanyName</td>
        <td>@item.JobTitle</td>
        <td>@item.City</td>
        <td>@item.State</td>
        <td>@item.JobCreationDate.ToString("dd MMM yyyy")</td>
        <td></td>
    </tr>
    }

</table>
@Html.PagedListPager(Model, i =>Url.Action("Index", "Member", new {i }))