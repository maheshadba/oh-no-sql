<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Contoso Jobs</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Contoso Jobs", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>


                    @if (IdentityManagement.Utilities.Utils.IfUserAuthenticated())
                    {
                        if (IdentityManagement.Utilities.Utils.IfUserInRole("Member"))
                        {
                            <li>@Html.ActionLink("Search Jobs", "Index", "Member")</li>
                        }
                        if (IdentityManagement.Utilities.Utils.IfUserInRole("Administrator"))
                                {
                            <li>@Html.ActionLink("Add User", "Index", "AddCompanyUser")</li>

                        }
                        if (IdentityManagement.Utilities.Utils.IfUserInRole("Administrator") || IdentityManagement.Utilities.Utils.IfUserInRole("JobPoster"))
                        {
                            <li>@Html.ActionLink("Post Jobs", "Index", "JobPost")</li>
                        }
                        if (IdentityManagement.Utilities.Utils.IfUserInRole("Administrator") ||
                            IdentityManagement.Utilities.Utils.IfUserInRole("JobPoster") ||
                            IdentityManagement.Utilities.Utils.IfUserInRole("JobViewer"))
                        {
                            <li>@Html.ActionLink("View Job Postings", "Index", "Admin")</li>
                        }

                    }
                    else
                    {
                        <li>@Html.ActionLink("Job Seeker", "Index", "RegisterUser")</li>
                        <li>@Html.ActionLink("Employer", "Index", "Company")</li>
                    }


                </ul>
                <ul class="nav navbar-nav" style="float: right">
                    @if (IdentityManagement.Utilities.Utils.IfUserAuthenticated())
                    {
                        <li><img src="~/Content/User.png" style="margin-top:5px; height: 40px; padding: 3px; border: 1px solid gray; border-radius: 50%;"/></li>
                        if (IdentityManagement.Utilities.Utils.IfUserInRole("Member"))
                        {
                            <li>@Html.ActionLink(@User.Identity.Name, "Index", "Member")</li>
                        }
                        else if (IdentityManagement.Utilities.Utils.IfUserInRole("Administrator"))
                        {
                            <li>@Html.ActionLink(@User.Identity.Name, "Index", "Admin")</li>
                        }

                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Index", "Login")</li>
                    }

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" >
        @RenderBody()
      
        <footer style="position: absolute; bottom: 10px;" >
            <p>&copy; @DateTime.Now.Year - Contoso Jobs</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
